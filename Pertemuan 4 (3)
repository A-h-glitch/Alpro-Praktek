#include <iostream>
using namespace std;

void cetakPiramida(int tinggi) {
    for (int i = 1; i <= tinggi; ++i) {
        // Cetak spasi
        for (int j = i; j < tinggi; ++j) {
            cout << " ";
        }
        // Cetak bintang
        for (int k = 1; k <= (2 * i - 1); ++k) {
            cout << "*";
        }
        cout << endl;
    }
}

int main() {
    int tinggi;
    cout << "Masukkan tinggi segitiga: ";
    cin >> tinggi;
    cetakPiramida(tinggi);
    return 0;
}
